
<%- include('header') -%>
  <body>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <% for (let item of listItems) { %>
      <div class="item">
        <input type="checkbox" />
        <p><%= item %></p>
      </div>
      <% } %>
      <form class="item" action="/" method="POST">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
        <button type="submit" name="list" value=<%= listTitle %></button>+</button>
      </form>
    </div>
  </body>
<%- include('footer') -%>

